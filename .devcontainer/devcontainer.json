{\n  "name": "Claude + GitHub + VS Code Workspace",\n  "image": "mcr.microsoft.com/devcontainers/universal:2",\n  "features": {\n    "ghcr.io/devcontainers/features/node:1": {\n      "version": "lts"\n    },\n    "ghcr.io/devcontainers/features/python:1": {\n      "version": "3.11"\n    },\n    "ghcr.io/devcontainers/features/git:1": {\n      "version": "latest"\n    },\n    "ghcr.io/devcontainers/features/sshd:1": {\n      "version": "latest"\n    }\n  },\n  "customizations": {\n    "vscode": {\n      "extensions": [\n        "GitHub.copilot",\n        "GitHub.copilot-chat",\n        "ms-vscode-remote.remote-ssh",\n        "ms-python.python",\n        "dbaeumer.vscode-eslint",\n        "esbenp.prettier-vscode",\n        "eamodio.gitlens"\n      ],\n      "settings": {\n        "terminal.integrated.defaultProfile.linux": "bash",\n        "git.autofetch": true,\n        "git.confirmSync": false,\n        "editor.formatOnSave": true,\n        "editor.defaultFormatter": "esbenp.prettier-vscode"\n      }\n    }\n  },\n  "forwardPorts": [3000, 3001, 3002, 3003, 3004, 3005, 3006, 3007, 3008, 3009, 3010, 5678],\n  "postCreateCommand": "git config --global user.name 'Your Name' && git config --global user.email 'your.email@example.com' && npm install -g yarn pnpm && pip install --upgrade pip",\n  "remoteUser": "codespace"\n}